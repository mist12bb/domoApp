</head>
<body>
    <h1>MYSQL</h1>
    <h2>Amount</h2>
    <%action.forEach((act) =>{%>
        
        <p><%= act.amount %></p>
    <%})%>
    <h2>des</h2>
    <%action.forEach((act) =>{%>
        
        <p><%= act.des %></p>
    <%})%>
    <a></a>
    <form action="/get" method="post">
        <select name="type" id="type">

            <option value="expenss">expenss</option>
            <option value="inecom">inecom</option>
        </select>
        <input type="submit" value="submit">
    </form>
    <button id="btn">Show selected</button>

<div id="display"></div>
    <script>
        let selector = document.querySelector("select");
        function show_selected() {
            selector.addEventListener('change', function() {
                console.log("true")
                let pElem = document.querySelector("div");
                var index = selector.selectedIndex;
                // Add that data to the <p>
                    pElem.innerHTML = 'selectedIndex: ' + selector.children.item(index).value
              });}
              show_selected()
    </script>
</body>
</html>